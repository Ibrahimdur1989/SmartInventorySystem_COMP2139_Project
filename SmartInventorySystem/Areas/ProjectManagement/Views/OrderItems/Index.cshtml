@model IEnumerable<SmartInventorySystem.Areas.ProjectManagement.Models.OrderItem>

@{
    ViewData["Title"] = "Order Items";
}

<h2>Order Items</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order Item</a>
</p>

<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>Order ID</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("C")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Orders" class="btn btn-secondary">Back to Orders</a>