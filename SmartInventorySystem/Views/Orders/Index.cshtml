@model IEnumerable<SmartInventorySystem.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
    <tr>
        <th>Order Date</th>
        <th>Total Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
            <td>@order.TotalPrice.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Order</a>