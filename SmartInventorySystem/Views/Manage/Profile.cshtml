@model SmartInventorySystem.Models.ManageProfileViewModel

@{
    ViewData["Title"] = "Manage Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h3 class="text-center text-primary mb-4">@ViewData["Title"]</h3>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form asp-action="Profile" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ContactInfo" class="form-label"></label>
                        <input asp-for="ContactInfo" class="form-control" />
                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PreferredCategory" class="form-label"></label>
                        <input asp-for="PreferredCategory" class="form-control" />
                        <span asp-validation-for="PreferredCategory" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                </form>
                
                <hr />
                <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                    <button type="submit" class="btn btn-danger w-100 mt-3">Delete Account</button>
                </form>
                 

            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
