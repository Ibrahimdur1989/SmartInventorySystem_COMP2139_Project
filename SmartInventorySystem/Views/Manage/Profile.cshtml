@model ManageProfileViewModel

@{
ViewData["Title"] = "Manage Profile";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Profile" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PreferredCategory"></label>
        <input asp-for="PreferredCategory" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@if (TempData["Success"] != null)
{
<div class="alert alert-success mt-3">@TempData["Success"]</div>
}

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
