@model SmartInventorySystem.Models.OrderItem

@{
    ViewData["Title"] = "Create Order Item";
}

<h2>Create Order Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="OrderId"></label>
        <select asp-for="OrderId" class="form-control" asp-items="ViewBag.Orders"></select>
    </div>
    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products"></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>