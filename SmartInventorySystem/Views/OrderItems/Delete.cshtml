@model SmartInventorySystem.Models.OrderItem

@{
    ViewData["Title"] = "Delete Order Item";
}

<h2>Are you sure you want to delete this order item?</h2>

<table class="table">
    <tr><th>Product</th><td>@Model.Product.Name</td></tr>
    <tr><th>Quantity</th><td>@Model.Quantity</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>