@model SmartInventorySystem.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <!-- Display product price -->
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <!-- Display quantity in stock -->
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.QuantityInStock</dd>

        <!-- Display low stock threshold -->
        <dt class="col-sm-2">Low Stock Threshold</dt>
        <dd class="col-sm-10">@Model.LowStockThreshold</dd>

        <!-- Display product category -->
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@(Model.Category != null ? Model.Category.Name : "Uncategorized")</dd>

    </dl>
</div>

<!-- Action buttons for editing and navigating back -->
<a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
